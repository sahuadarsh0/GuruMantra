<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GuruMantra" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/red_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_200</item>
        <item name="colorSecondaryVariant">@color/red_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>



    <style name="Theme.SplashScreenTheme" parent="Theme.SplashScreen">
        // Set the splash screen background, animated icon, and animation duration.
        <item name="windowSplashScreenBackground">@android:color/white</item>

        // Use windowSplashScreenAnimatedIcon to add either a drawable or an
        // animated drawable. One of these is required.
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash</item>
        <item name="windowSplashScreenAnimationDuration">200</item>  # Required for
        // animated icons
<!--        <item name="android:windowSplashScreenBrandingImage">@drawable/bottom_text</item>-->

        // Set the theme of the Activity that directly follows your splash screen.
        <item name="postSplashScreenTheme">@style/Theme.GuruMantra</item>  # Required.
    </style>

    <style name="TextGrey">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBlack">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="TextWhite">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="TextGrey.small">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextGrey.medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextGrey.large">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextBlack.small">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextBlack.medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextBlack.large">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextBlack.elarge">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextGrey.elarge">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextWhite.elarge">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextWhite.large">
        <item name="android:textSize">22sp</item>
    </style>
</resources>