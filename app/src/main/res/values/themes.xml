<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GuruMantra" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_200</item>
        <item name="colorSecondaryVariant">@color/red_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@drawable/bg1</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>


    <style name="TextGrey">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBlack">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="TextWhite">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="TextGrey.small">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextGrey.medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextGrey.large">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextBlack.small">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextBlack.medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextBlack.large">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextBlack.elarge">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextGrey.elarge">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextWhite.elarge">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextWhite.large">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="SplashScreenTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashScreenTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Light" >
        <item name="colorPrimary">@color/white</item>

    </style>

    <style name="SplashScreenTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" >
        <item name="titleTextColor">@color/purple_500</item>
    </style>
</resources>